# Copy this file to .env and fill the values
# PRIVATE_KEY can be decimal (uint) or a hex 0x... value recognized by forge
PRIVATE_KEY=0xYOUR_PRIVATE_KEY

# Base Sepolia RPC URL (Alchemy, Infura, etc.)
BASE_RPC=https://base-sepolia.g.alchemy.com/v2/yourKey

# Comma separated addresses (EXACT 42 chars each, with 0x)
PARTICIPANTS_CSV=0xParticipant1Address,0xParticipant2Address,0xParticipant3Address

# Merchant address receiving funds
MERCHANT_ADDR=0xMerchantAddress

# Total amount of the pool in wei (must be divisible by number of participants)
POOL_TOTAL_WEI=0

# USDT token address on Base Sepolia (or mock on Anvil)
USDT_TOKEN=0xUsdtTokenAddress

# Optional: reuse an already deployed StoragePointer
EXISTING_STORAGE_POINTER=0x0000000000000000000000000000000000000000

# Optional: IPFS/Filecoin CID for pool metadata (e.g. JSON)
METADATA_CID=

# Optional: separate CID for group metadata
GROUP_METADATA_CID=

# Optional: override analytics CRE address (defaults to deployer)
ANALYTICS_CRE=
